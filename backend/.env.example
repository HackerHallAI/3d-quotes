# Application Settings
APP_NAME=3D_Quotes_Tool
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-secret-key-here

# Server Configuration
HOST=localhost
PORT=8000
CORS_ORIGINS=http://localhost:3000

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Zoho CRM/Inventory API Configuration
ZOHO_CLIENT_ID=your_client_id
ZOHO_CLIENT_SECRET=your_client_secret
ZOHO_REFRESH_TOKEN=your_refresh_token
ZOHO_REDIRECT_URI=http://localhost:8000/auth/zoho/callback
ZOHO_SCOPE=ZohoCRM.modules.ALL,ZohoInventory.FullAccess.all
ZOHO_ACCOUNTS_URL=https://accounts.zoho.com
ZOHO_CRM_URL=https://www.zohoapis.com/crm/v2
ZOHO_INVENTORY_URL=https://www.zohoapis.com/inventory/v1

# Email Configuration for Supplier Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true
SUPPLIER_EMAIL=supplier@company.com

# File Upload Configuration
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=.stl
TEMP_UPLOAD_DIR=data/temp_uploads
FILE_CLEANUP_TIMEOUT=3600

# HP MJF Printer Constraints (in mm)
HP_MJF_MAX_X=380
HP_MJF_MAX_Y=284
HP_MJF_MAX_Z=380

# Pricing Configuration
MINIMUM_ORDER_USD=20.00
MARKUP_PERCENTAGE=15
CURRENCY=USD

# Material Pricing (per cmÂ³)
PA12_GREY_RATE=0.50
PA12_BLACK_RATE=0.55
PA12_GB_RATE=0.60

# Shipping Configuration (NZ)
SHIPPING_SMALL_COST=5.00
SHIPPING_MEDIUM_COST=10.00
SHIPPING_LARGE_COST=15.00
SHIPPING_SMALL_THRESHOLD=100
SHIPPING_MEDIUM_THRESHOLD=500

# Database Configuration (if needed)
DATABASE_URL=sqlite:///./quotes.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log